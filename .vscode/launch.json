    "version": "0.2.0",
    "configurations": [
        {
            "name": "Download All Dashboards",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/dd-tf",
            "cwd": "${workspaceFolder}",
            "args": [
                "dashboards",
                "download",
                "--all"
            ],
            "envFile": "${workspaceFolder}/.env",
            "showLog": false,
            "trace": "verbose"
        },
        {
            "name": "Download All Monitors",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/dd-tf",
            "cwd": "${workspaceFolder}",
            "args": [
                "monitors",
                "download",
                "--all"
            ],
            "envFile": "${workspaceFolder}/.env",
            "showLog": false,
            "trace": "verbose"
        },
        {
            "name": "Version Info",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/dd-tf",
            "cwd": "${workspaceFolder}",
            "args": [
                "version",
            ],
            "envFile": "${workspaceFolder}/.env",
            "showLog": false,
            "trace": "verbose"
        },
        {
            "name": "Runtime config",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/dd-tf",
            "cwd": "${workspaceFolder}",
            "args": [
                "config",
            ],
            "envFile": "${workspaceFolder}/.env",
            "showLog": false,
            "trace": "verbose"
        }
    ]
}
